{
    "name": "puninar/logistics-app",
    "description": "Modernized CodeIgniter 4.x Logistics Application",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "codeigniter4/framework": "^4.4",
        "phpoffice/phpspreadsheet": "^1.29",
        "endroid/qr-code": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}